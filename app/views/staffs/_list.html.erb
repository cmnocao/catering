<% unless smart_listing.empty? %>
  <table class="table table-hover">
    <thead>
      <% # Second argument of sortable is sorted attribute name %>
      <th class="col-md-3">
        <%= smart_listing.sortable "Name", "name" %>
      </th>
      <th class="col-md-4">
        <%= smart_listing.sortable "Role", "category" %>
      </th>
    </thead>
    <tbody>
      <% smart_listing.collection.each do |s| %>
        <tr>
          <td><b><%= link_to s.name, staff_path(s) %></b></td>
          <td><% s.categories.count > 0 ? s.categories.last.name : "Please add" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= smart_listing.paginate %>
  <%= smart_listing.pagination_per_page_links %>
<% else %>
  <p class="warning">No records!</p>
<% end %>