<h3 class="page-header">
  Events <small> | </small><span class="badge"><%= @events.count %></span>
</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |e| %>
      <tr>
        <td><b><%= e.name %></b></td>
      </tr>
    <% end %>
  </tbody>
</table>