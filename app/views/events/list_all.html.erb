<h3 class="page-header">
  Events <small> | </small><span class="badge"><%= @events.count %></span>
</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
			<th>Venue</th>
			<th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |e| %>
      <tr>
        <td><b><%= link_to e.name, event_path(e) %></b></td>
        <td><b><%= link_to e.venue.name, venue_path(e.venue_id) %></b></td>
        <td><b><%= e.start_time %></b></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back", :back, :class => "btn btn-default" %>