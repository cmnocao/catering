<%= form_for @client do |client_form| %>
  <p>
    <%= client_form.label :name %><br />
    <%= client_form.text_field :name %>
  </p>

		<%= client_form.fields_for :phones do |phone_form| %>
			<%= render 'phone', phone_form: phone_form %>
	  <% end %>

	  <%= client_form.fields_for :addresses do |address_form| %>
			<%= render 'address', address_form: address_form %>
	  <% end %>

	  <%= client_form.fields_for :emails do |email_form| %>
			<%= render 'email', email_form: email_form %>
	  <% end %>
  
  <p><%= client_form.submit "Submit" %></p>

<% end %>
